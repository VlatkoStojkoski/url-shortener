<div class="mt-5"></div>
<%- include ("partials/message.ejs") -%>
<form action="/shorturls/urls" method="POST" class="mt-2">
  <div class="row">
    <div class="form-group col-md-6 col-sm-12">
      <label for="longUrl"><strong>Long URL:</strong></label>
      <input type="url" class="form-control" id="longUrl" name="longUrl" placeholder="https://example.com"
        value="<%= typeof longUrl != 'undefined' ? longUrl : '' %>" required>
    </div>
    <div class="form-group col-md-6 col-sm-12">
      <label for="shortUrl"><strong>Short ID:</strong></label>
      <div class="form-row">
        <p class="col-auto pt-2">https://domain.com/</p>
        <input type="text" class="form-control col pl-2" id="shortUrl" name="shortUrl" placeholder="custom-url">
      </div>
    </div>
  </div>
  <div class="row" style="padding-left: 15px;">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
<br>
<table class="table table-striped table-borderless table-hover table-responsive">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Long URL</th>
      <th scope="col">Short URL</th>
      <th scope="col">Clicks</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">0</th>
      <td>/</td>
      <td>/</td>
      <td>/</td>
    </tr>
    <% if(urls!=[]) { %>
      <% urls.forEach((url, i) => { %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><a href="<%= url.longUrl %>"><%= url.longUrl %></a></td>
          <td><%= url.shortUrl %></td>
          <td><%= url.clicks %></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
<br>
<a href="/shorturls/users/logout" type="submit" class="btn btn-warning">Logout</a>